        <tbody>
        {{#each folders}}
            {{#if @key}}
                <tr><td colspan=3 class="rowheading">{{@key}}</td></tr>
                <tr>
                    <th><!-- core skill --></th>
                    <th>{{ localize "SWADE.Name" }}</th>
                    <th>{{ localize "SWADE.LinkAttr" }}</th>
                </tr>
            {{else}}
                <tr>
                    <th><!-- core skill --></th>
                    <th>{{ localize "SWADE.Name" }}</th>
                    <th>{{ localize "SWADE.LinkAttr" }}</th>
                </tr>
            {{/if}}      
            {{#each this}}
                <tr>
                    <td>
                        {{#if data.data.isCoreSkill}}âœª{{/if}}
                    </td>
                    <td class="hasPopup">
                        @Compendium[{{compendiumPackage}}.{{compendiumName}}.{{ogId}}]{ {{~data.name~}}}
