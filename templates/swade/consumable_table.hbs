{{#each folders}}
  {{#if @key}}<h3>{{@key}}</h3>{{/if}}

  <div class="pl-summary-journals">
    <table class="table summary-table">
      <tbody>
        <tr>
          <th>{{localize "SWADE.Name"}}</th>
          <th>{{localize "SWADE.Charges"}}</th>
          <th>{{localize "SWADE.Weight"}}</th>
          <th>{{localize "SWADE.Price"}}</th>
          <th>{{localize "SWADE.Quantity"}}</th>
        </tr>
        {{#each this}}
          <tr>
            <td class="hasPopup">
              @Compendium[{{metadata_id}}.{{ogId}}]{
              {{~name~}}}
              <div class="popup">{{{popupText}}}
                <p class="compendiumSource">Source: {{compendiumLabel}}</p>
              </div>
            </td>
            <td class="centered">{{system.charges.max}}</td>
            <td class="centered">{{system.weight}}</td>
            <td class="centered">{{system.price}}</td>
            <td class="centered">{{system.quantity}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{/each}}