<div class="pl-summary-journals">
    <table class="table summary-table">
        <tbody>
        {{#each folders}}
            {{#if @key}}
                <tr><td colspan=2 class="rowheading">{{@key}}</td></tr>
                <tr>
                    <th>{{ localize "SWADE.Name" }}</th>
                    <th></th>
                </tr>
            {{else}}
                <tr>
                    <th>{{ localize "SWADE.Name" }}</th>
                    <th></th>
                </tr>
            {{/if}}      
            {{#each this}}
                <tr>
                    <td class="hasPopup">
                        @Compendium[{{metadata_id}}.{{ogId}}]{ {{~name~}}}
                        <div class="popup">{{{popupText}}}
                            <p class="compendiumSource">Source: {{compendiumLabel}}</p>
                        </div>
                    </td>
                    <td class="centered">
                        {{#if system.major}}
                            {{ localize "SWADE.Major"}}
                        {{else}}
                            {{ localize "SWADE.Minor"}}
                        {{/if}}
                    </td>
                </tr>
            {{/each}}
        {{/each}}            
        </tbody>
    </table>
</div>

