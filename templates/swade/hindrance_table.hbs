{{#each itemsByCategory}}
  {{#if this.name}}<h3>{{this.name}}</h3>{{/if}}

  <div class="pl-summary-journals">
    <table class="table summary-table">
      <tbody>
        <tr>
          <th>{{localize "SWADE.Name"}}</th>
          <th></th>
        </tr>
        {{#each this.value}}
          <tr data-tooltip="{{~descriptionForTooltip~}}">
            <td>@Compendium[{{metadata_id}}.{{ogId}}]{ {{~name~}}}</td>
            <td class="centered">
              {{#if system.major}}
                {{localize "SWADE.Major"}}
              {{else}}
                {{localize "SWADE.Minor"}}
              {{/if}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{/each}}