<article class="swrifts">
    <section class="table-wrapper">
        {{#each itemsByCategory}}
            {{#if this.name}}<h3>{{this.name}}</h3>{{/if}}

            <div class="pl-summary-journals">
                <table class="dense">
                    <tbody>
                    <tr>
                        <th></th>
                        <th>{{localize "SWADE.Name"}}</th>
                        <th>Description</th>
                        <th>{{localize "SWADE.Rank"}}</th>
                        <th>{{localize "SWADE.PP"}}</th>
                        <th>{{localize "SWADE.Rng"}}</th>
                        <th>{{localize "SWADE.Dur"}}</th>
                        <th>{{localize "SWADE.Dmg"}}</th>
                    </tr>
                    {{#each this.value}}
                        <tr>
                            <td><img src="{{img}}"></td>
                            <td><b>@Compendium[{{metadata_id}}.{{ogId}}]{ {{~name~}}}</b></td>
                            <td>
                                <div class="summary-description">
                                    {{{popupText}}}
                                    <p class="compendiumSource">Source: {{compendiumLabel}}</p>
                                </div>
                            </td>
                            <td class="centered">{{system.rank}}</td><!-- TODO: localise? -->
                            <td class="centered">{{system.pp}}</td>
                            <td class="centered">{{system.range}}</td>
                            <td class="centered">{{system.duration}}</td>
                            <td class="centered">{{PCTMValueOrEmDash system.damage}}</td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        {{/each}}</section>
</article>